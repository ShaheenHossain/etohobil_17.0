<odoo>
    <record id="view_payment_record_form" model="ir.ui.view">
        <field name="name">payment.record.form</field>
        <field name="model">payment.record</field>
        <field name="arch" type="xml">
            <form string="Payment Record">
                <sheet>
                    <group>
                        <field name="member_id"/>
                        <field name="member_payment_id"/>
                        <field name="date"/>
                        <field name="base_amount"/>
                        <field name="deposit_amount"/>
                        <field name="subscription_amount"/>
                        <field name="extra_amount"/>
                        <field name="due_amount"/>
                        <field name="total_amount"/>
                        <field name="grand_total"/>
                        <field name="receipt" widget="binary"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_payment_record_tree" model="ir.ui.view">
        <field name="name">payment.record.tree</field>
        <field name="model">payment.record</field>
        <field name="arch" type="xml">
            <tree>
                <field name="member_id"/>
                <field name="date"/>
                <field name="base_amount"/>
                <field name="deposit_amount"/>
                <field name="subscription_amount"/>
                <field name="extra_amount"/>
                <field name="due_amount"/>
                <field name="total_amount"/>
                <field name="grand_total"/>
                <field name="receipt" widget="binary"/>
            </tree>
        </field>
    </record>


</odoo>
